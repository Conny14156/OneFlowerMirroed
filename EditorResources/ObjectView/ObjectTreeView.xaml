<UserControl x:Class="EditorResources.ObjectView.ObjectTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorResources.ObjectView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="searchBox" TextWrapping="Wrap" Text="Search Tree..." Margin="0"/>
        <TreeView x:Name="treeView" Margin="0" Grid.Row="1">
                <TreeViewItem Header="GameObject">
                    <TreeViewItem Header="Actor">
                        <TreeViewItem Header="Go1"/>
                        <TreeViewItem Header="Go2"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Item">
                        <TreeViewItem Header="Armor">
                            <TreeViewItem Header="Go3"/>
                            <TreeViewItem Header="Go4"/>
                        </TreeViewItem>
                        <TreeViewItem Header="...">
                            <TreeViewItem Header="Go1"/>
                            <TreeViewItem Header="Go2"/>
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="Effects"/>
                <TreeViewItem Header="Sound"/>
        </TreeView>

    </Grid>
</UserControl>
